<script type="text/javascript">


    $(function () {
        $(".network_point").bind("click", function () {
            var user_id = $(this).attr('user_id');
            get_network_point(user_id);

        })


    });

    function get_network_point(user_id) {
        $.ajax({
            type: "POST",
            url: "network/getnetworkpoint",
            data: {user_id: user_id}
        })
            .done(function (data) {
                $("#network_frame").html(data);
            });

    }
</script>
