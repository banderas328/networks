    $(function(){

        $(".blogs_more").bind("click",function(){
            $.ajax({
                type: "POST",
                url: "blog/getblogs",
                data : {offset : $(this).attr("offset")}

            })
                .done(function( data ) {
                    $("#list_blogs").append(data);
                });
        })    });
</script>