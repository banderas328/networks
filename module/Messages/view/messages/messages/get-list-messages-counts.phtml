<script type="text/javascript">

    $(function() {


        $(".start_chat").bind("click",function(){
            send_message_from_user_chat(this);
        });

    });
    function send_message_from_user_chat(element) {
        var to_user = $(element).attr('to_user');
        $('.message_to_user_area_chat').val("");
        $(".message_to_user_from_chat_list").remove();
        var chat_html = '<div class="message_to_user_from_chat_list" style="display:hide;" title="Enter message" to_user='+to_user+'><p class="close_chat" to_user='+to_user+'>X</p><div class="message_box" to_user='+to_user+'></div><div class="user_chat" to_user='+to_user+'><textarea class="message_to_user_area_chat"  maxlength="500" to_user='+to_user+'></textarea><button class="submit" class="chats_button" to_user='+to_user+'>send</button></div></div>';

        $('body').append(chat_html);
        $(".message_to_user_from_chat_list[to_user="+to_user+"]").draggable();
        $(".message_to_user_from_chat_list[to_user="+to_user+"]").addClass('new_chat');
        $(".message_to_user_from_chat_list").bind("click",function() {
          //  $(this).addClass("window");
        });
        $(".message_to_user_from_chat_list").find('button').addClass("message_to_user_from_user_chats_button");
        $(".message_to_user_from_user_chats_button").bind("click",function(){
            send_chat(this);
        });
        $(".close_chat").bind("click",function(){
            var to_user = $(this).attr('to_user');
            $(".message_to_user_from_chat_list[to_user="+to_user+"]").remove();

        })
        $(".message_to_user_from_chat_list[to_user="+to_user+"]").show();
        get_old_messages(to_user);
        sync_chat();
    }

    function get_old_messages(to_user) {

        $.ajax({
            type: "POST",
            url: "sync/getoldmessages",
            dataType: "json",
            data: {}
        })
            .done(function(data,to_user) {
                $.each(data, function (index,message) {
                    $(".message_box[to_user="+message.from_user+"]").append("<p>"+message.first_name+" "+message.second_name+":"+message.text+"</p>");
                    $(".message_box[to_user="+message.to_user+"]").append("<p>"+message.first_name+" "+message.second_name+":"+message.text+"</p>");
                    $(".message_box[to_user="+message.to_user+"]").animate({ scrollTop: 10000}, 50);

                });

            });

    }
    function sync_chat(){

        $.ajax({
            type: "POST",
            url: "sync/sync",
            dataType: "json",
            data: {}
        })
            .done(function(data) {
                $.each(data.simple_messages, function (index,message) {
                    $(".message_box[to_user="+message.from_user+"]").find("p").first().remove();
                    $(".message_box[to_user="+message.from_user+"]").append("<p>"+message.first_name+" "+message.second_name+":"+message.text+"</p>");
                    $(".message_box[to_user="+message.from_user+"]").animate({ scrollTop: 10000}, 50);

             });
                setTimeout(sync_chat, 3000);
            });

    }
    function send_chat(element) {
        var to_user = $(element).attr('to_user');
        var text = $('.message_to_user_area_chat[to_user='+to_user+']').val();
        $('.message_to_user_area_chat[to_user='+to_user+']').val("");
        $(".message_box[to_user="+to_user+"]").append("you:"+text+"<br/>");
        $('.message_to_user_from_user_chats_button[to_user='+to_user+']').val("");
        $(".message_box[to_user="+to_user+"]").animate({ scrollTop: 10000}, 50);
        $.ajax({
            type: "POST",
            url: "messages/addmessage",
            data : {text :text , to_user : to_user }
        });
    }
</script>

